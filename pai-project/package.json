{
  "name": "pai-project",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "lint:js": "eslint \"js/**/*.js\"",
    "lint:html": "htmlhint \"*.html\"",
    "lint:css": "stylelint \"*.css\"",
    "format": "npm run format:js && npm run format:html",
    "format:js": "prettier --write \"js/**/*.js\"",
    "format:html": "prettier --write \"*.html\"",
    "format:css": "prettier --write \"*.css\"",
    "fix": "npm run lint:js -- --fix && npm run format",
    "check": "npm run lint && prettier --check \"**/*.{js,html,css}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "htmlhint": "^1.8.0",
    "prettier": "^3.8.0",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0"
  }
}
